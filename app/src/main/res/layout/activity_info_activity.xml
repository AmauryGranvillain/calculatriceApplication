<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="5"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Application développé par"
            android:textColor="@color/backgroungButton"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@color/colorAccent"
            android:text="Amaury GRANVILLAIN"
            android:textSize="25dp"/>
        <Button
            android:text="0606060606"
            android:id="@+id/button_telnumber"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            android:background="@drawable/button_custom"
            />
        <Button
            android:text="toto@mail.com"
            android:id="@+id/button_sendtomail"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            android:background="@drawable/button_custom"
            />
        <Button
            android:text="Quitter les infos"
            android:id="@+id/button_digitexitactivity"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            android:background="@drawable/button_custom"
            />

    </GridLayout>

</android.support.design.widget.CoordinatorLayout>